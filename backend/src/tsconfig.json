{
    "compilerOptions": {
      "moduleResolution": "node",
      "target": "ES6",
      "module": "ESNext",   //"commonjs",
      "lib": ["ES2019"],
      "strict": true,
      "esModuleInterop": true,
      "outDir": "./",
      "rootDir": "./",
      "noImplicitAny": false ,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true
    },
    "include": ["src/**/*.ts","./**/*.ts"], 
    "exclude": ["node_modules"]
  }
  